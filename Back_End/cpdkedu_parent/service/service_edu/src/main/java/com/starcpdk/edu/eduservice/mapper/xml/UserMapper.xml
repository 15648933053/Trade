<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starcpdk.edu.eduservice.mapper.UserMapper">
    <select id="seluser" parameterType="com.starcpdk.edu.eduservice.entity.User" resultType="com.starcpdk.edu.eduservice.entity.User">
        select * from user 
        <where>
            <if test="openid != null and open != ''">
                openid = #{openid}
            </if>
            <if test="birth != null and birth != ''">
                and birth = #{birth}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>

        </where>
        limit #{page} , #{num}
    </select>

    <update id="upduser" parameterType="com.starcpdk.edu.eduservice.entity.User">
        update user
        <set>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="birth != null and birth != ''">
                birth = #{birth}
            </if>
            <if test="score != 0">
                score = #{score}
            </if>
            <if test="uni_modified"></if>
        </set>
    </update>

</mapper>
